SELECT erf.name,erf.id
FROM erf
WHERE erf.id LIKE "ali";

UPDATE `erf` SET `id`='6',`name`='ali' WHERE erf.id=1

DELETE FROM `erf` WHERE erf.id=6

SELECT erf.id(s)
FROM erf
WHERE id=erf.id
GROUP BY erf.id(s)
ORDER BY erf.id(s);
